# {{ ansible_managed }}
easydb-server:
  docker-hostname: easydb-server
  pgsql:
    database: easydb
  extension:
    external-user-schema: {{ external_user_schema }}
  server:
    external_url: {{ easydb_url }}
    enable_post_settings: {{ enable_post_settings }}
    api:
      settings:
        restart: {{ enable_restart }}
        purgedata: {{ enable_purgedata }}
        purgeall: {{ enable_purgeall }}
    mailer:
      enabled: {{ enable_mailer }}
  default_client:
     datamodel:
       uid: "{{ datamodel_uid }}"
       server: "{{ objectstore_url }}"
       instance: {{ objectstore_instance_id }}
  plugins:
    enabled+:
{% for plugin in enable_plugins %}
      - {{ plugin }}
{% endfor %}
{% if easydb_hotfolder_enabled %}
  hotfolder:
    directory: /hotfolder
    number_of_workers: 1
    urls:
      - type: windows_webdav
        url: \\{{ easydb_hofolder_base_url }}\upload\collection
        separator: \
      - type: webdav_http
        url: https://{{ easydb_hofolder_base_url }}/upload/collection
        separator: /
{% endif %}


elasticsearch:
  memory-size: {{ easydb_es_memory_size }}

common:
  email:
    # ssmtp.conf:mailhub
    server: {{ mail_relay_for_ssmtp }}
    # ssmtp.conf:hostname
    hostname: {{ hostname_for_ssmtp }}
    # server.mailer.envelope_address
    from-address: {{ envelope_from }}
