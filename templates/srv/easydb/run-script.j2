#!/bin/bash

# {{ ansible_managed }}

docker run -d -ti \
    --name easydb-{{ easydb_container_name }} \
    --restart=always \
    --net {{ easydb_container_network }} \
{% if 'volumes' in easydb_containers[easydb_container_name] %}
{% for volume in easydb_containers[easydb_container_name].volumes %}
    --volume {{ volume }} \
{% endfor %}
{% endif %}
{% if 'ports' in easydb_containers[easydb_container_name] %}
{% for port in easydb_containers[easydb_container_name].ports %}
    -p {{ port }} \
{% endfor %}
{% endif %}
    {{ easydb_containers[easydb_container_name].image }}
